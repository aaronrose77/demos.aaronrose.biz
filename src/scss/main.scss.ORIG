/*****************************
******* Navbar  Styles *******
*****************************/
.topbar {
  position: relative;
  z-index: 1;
  width: 100%;
  background-color: #FFF;
  min-height: 3rem;
}
.topbar .menu-trigger {
  position: absolute;
  right: 0;
  min-height: 3rem;
  cursor: pointer; 
}
.topbar .menu-trigger:before,
.topbar .menu-trigger:after {
  content: "";
  font-size: 1.2rem;
  color: #0067b4;
  font-weight: bold;
  width: 3em;
  line-height: 1;
  text-align: center;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -0.8rem;
  z-index: 2;
  display:block;
}
.topbar .menu-trigger:before {
  content: "Menu";
  text-transform: uppercase;
  font-size: .5rem;
  margin-top: 0.6rem;
  margin-right: 1rem;
  text-align: center;
}
.topbar .menu-trigger:after {
  content: "â˜°";
}
.topbar.open .menu-trigger:after {
  content: "X"; 
}
.topbar .navmenu .item {
  position: relative;
  vertical-align: middle;
  line-height: 1;
  text-decoration: none;
  flex: 0 0 auto;
  user-select: none;
  padding: 0.9375rem;
  display: none;
}
.topbar .navmenu .item.login {
  display: inherit;
  position: relative;
  color: #0079c2;
  top: 0;
}
.topbar .navmenu .right.menu {
  float: left;
}

.topbar.open .navmenu {
  position: absolute;
  background-color: #0079c2;
  width: 100%;
  text-align: left;
  top: 3rem;
}
.topbar.open .navmenu .item {
  display: block;
  color: #FFF;
}
.topbar.open .navmenu .item.login {
  position: absolute;
  top: -3rem;
  color: #0067b4;
}

@media print, screen and (min-width: 40em) {
  .topbar {
    background-color: #FFF;
  }
  .topbar:before,
  .topbar:after {
    display:none;
  }
  .topbar .container {
    //padding-right: 0.9375rem;
    //padding-left: 0.9375rem;
  }
  .topbar .navmenu {
    min-height: 3rem;
    display: flex;
    margin: 0;
  }
  .topbar .navmenu .item {
    display: inline-block;
  }
  .topbar .navmenu:after {
    content: "";
    display: block;
    height: 0;
    visibility: hidden;
  }
  .topbar .navmenu:first-child {
    margin-top: 0;
  }
  .topbar .navmenu:last-child {
    margin-bottom: 0;
  }
  .topbar .navmenu .menu {
    margin: 0;
  }
  .topbar .navmenu > .menu {
    display: flex;
  }
  .topbar .navmenu .item {
    align-items: center;
    display: inline-block;
  }

  .topbar .navmenu:not(.vertical) .item:first-child {
   // padding-left: 0;
  }
  .topbar .navmenu:not(.vertical) .item:last-child {
   // padding-right: 0;
  }
  .topbar .navmenu .item > i.icon {
      opacity: .9;
      float: none;
      margin: 0 .5rem 0 0;
  }
  .topbar .navmenu .right.item, 
  .topbar .navmenu .right.menu {
      display: flex;
      margin-left: auto!important;
  }
  
}


